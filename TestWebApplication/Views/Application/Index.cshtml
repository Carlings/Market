@model IEnumerable<TestWebApplication.Models.ApplicationType> 

<div class = "container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Type List</h2>
        </div>
        <div class="col-6 text-lg-end">
            <a asp-controller="Application" asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> &nbsp; Create Application Type
            </a> 
        </div>
    </div>
    <br/>
    @if(@Model.Count() > 0)
    {
        <table class = "table table-bordered table-striped" style = "width:100%" >
            <thead>
                <tr> 
                    <th>
                    Category Name
                    </th>
                    <th/>
                </tr>
            </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50%">@item.Name</td>

                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Application" asp-route-Id="@item.Id" asp-action="Edit" class="btn btn-primary">
                                <i class="fas fa-edit"></i> 
                            </a>
                            <a asp-controller="Application" asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger">
                                <i class="far fa-trash-alt"></i> 
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
        </table>
    }
    else
    {
        <p> No Application Type exists. </p>
    }
</div>



